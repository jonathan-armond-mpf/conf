# Python2
export PATH=/usr/local/opt/python/libexec/bin:$PATH
# Haskell
export PATH=$HOME/Library/Haskell/bin:$PATH
# Homebrew
export PATH=/usr/local/bin:/usr/local/sbin:$HOME/bin:$HOME/.local/bin:$PATH

export PKG_CONFIG_PATH=/usr/local/lib/pkgconfig:/usr/X11R6/lib/pkgconfig:$PKG_CONFIG_PATH

export MAILDIR=$HOME/.mail

# R
export R_ENABLE_JIT=3
#export EDITOR="emacsclient -t"
export EDITOR=vim
export VISUAL=$EDITOR

export PS1="\h:\W$ "

umask 0077

[ -f ~/.alias ] && source ~/.alias
[ -f ~/conf/private/homebrew ] && source ~/conf/private/homebrew
[ -f ~/.localprofile ] && source ~/.localprofile

[ -f /usr/local/etc/bash_completion ] && . /usr/local/etc/bash_completion
